{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "paths": {
      "$app/*": ["./app/*"],
      "$root/*": ["./*"]
    },
    "target": "es2015"
  },
  "include": ["api", "app", "locales", "scripts", "types"]
}
